<div role="main" id="mainContent">
    <section class="pageSection" style="text-align: justify">
        <div class="row-fluid">
         
            <div class="span3 sectionImg">
            <div class="noTransition">            
                <div class="centeringWrapper">
                    <img src="@Url.Content("~/Theme/Images/PhotoNico.jpg")" alt="" style="width:170px; height: 180px" />
